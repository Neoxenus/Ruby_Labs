<h1> <%= t('registration') %></h1>
<hr>

<%= form_for :student, url: students_path do |f| %>
  <p>
    <%= t('name') %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= t('school') %><br>
    <%= f.text_field :school %>
  </p>
  <p>
    <%= t('is_need_dorm') %><br>
    <%= f.check_box(:is_need_dorm, {}, "Yes", "No") %>
  </p>
  <p>
    <%= t('is_teacher') %><br>
    <%= f.check_box(:is_teacher, {}, "Yes", "No") %>
  </p>
  <p>
    <%= t('experience') %><br>
    <%= f.number_field :experience, min: 0 %>
  </p>
  <p>
    <%= t('language')%>:<br>
    <%= f.select :language_id, Language.all.collect { |p| [ p.language_name, p.id ] }, include_blank: true %>
    <%#= f.select :person_id, Person.all.collect { |p| [ p.name, p.id ] }, include_blank: true %>
    <%#= f.number_field :language_id %>
  </p>
  <%= f.submit t('add_new_student') %>
<% end %>