<h3><%= t('list_of_students') %></h3>
<hr>
<ul class="row">
  <div class="col-9 row">
    <div class="col-4">
      <%= t('name') %>
    </div>
    <div class="col-4">
      <%= t('experience') %>
    </div>
    <div class="col-4">
      <%= t('school') %>
    </div>
  </div>
</ul>
<hr>
<% @students.each do |s| %>
  <ul class="row">
    <div class="col-9 row">
      <div class="col-4">
        <%= s.name %>
      </div>
      <div class="col-4">
        <%= s.experience %>
      </div>
      <div class="col-4">
        <%= s.school %>
      </div>
    </div>
    <div class="col-1">
      <%= link_to t('edit'),
                  edit_student_path(s),
                  :class => 'btn btn-warning' %>
    </div>
    <div class="col-1">
      <%= button_to t('delete'),
                    student_path(s),
                    method: :delete,
                    remote: true,
                    data: {confirm: "Are you certain you want to delete this?"},
                    :class => 'btn btn-danger pull-right' %>
    </div>


  </ul>

<% end %>