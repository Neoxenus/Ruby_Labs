<h3>List of students</h3>
<% @students.each do |s| %>
  <ul>
    <%= s.name %>
    <%= link_to 'Edit',
                edit_student_path(s),
                :class => 'btn btn-warning' %>
    <%= button_to 'Delete',
                  student_path(s),
                  method: :delete,
                  remote: true,
                  data: {confirm: "Are you certain you want to delete this?"},
                  :class => 'btn btn-danger' %>
  </ul>

<% end %>