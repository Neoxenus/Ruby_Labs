<h1><%= t('edit') %></h1>
<%= form_for :student, url: student_path(@student), method: :patch do |f| %>
  <p>
    <%= t('name') %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= t('school') %><br>
    <%= f.text_field :school %>
  </p>
  <p>
    <%= t('is_need_dorm') %><br>
    <%= f.check_box(:is_need_dorm, {}, "Yes", "No") %>
  </p>
  <p>
    <%= t('is_teacher') %><br>
    <%= f.check_box(:is_teacher, {}, "Yes", "No") %>
  </p>
  <p>
    <%= t('experience') %><br>
    <%= f.number_field :experience, min: 0 %>
  </p>
  <p>
    <%= t('language')%>:<br>
    <%= f.select :language_id, Language.all.collect { |p| [ p.language_name, p.id ] } %>
    <%#= f.number_field :language_id %>
  </p>
  <%= f.submit t('edit_student') %>
<% end %>